        </Pane>
        <Pane fx:id="productsPane" layoutX="475.0" layoutY="64.0" prefHeight="273.0" prefWidth="396.0">
            <children>
                <TableView fx:id="productsTableView" layoutY="44.0" prefHeight="172.0" prefWidth="396.0">
