                        <TableColumn fx:id="productIdColumn" prefWidth="68.0" text="Product ID" />
                        <TableColumn fx:id="productNameColumn" prefWidth="147.0" text="Product Name" />
                        <TableColumn fx:id="productInventoryLevelColumn" prefWidth="95.0" text="Inventory Level" />
                        <TableColumn fx:id="productPricePerUnitColumn" prefWidth="85.0" text="Price per Unit" />
                    </columns>
                </TableView>
                <Button fx:id="productAddButton" layoutX="192.0" layoutY="234.0" mnemonicParsing="false" text="Add" />
                <Button fx:id="productModifyButton" layoutX="250.0" layoutY="234.0" mnemonicParsing="false" text="Modify" />
                <Button fx:id="productDeleteButton" layoutX="320.0" layoutY="234.0" mnemonicParsing="false" text="Delete" />
                <Label layoutX="14.0" layoutY="21.0" text="Products" />
                <TextField fx:id="productSearchField" layoutX="221.0" layoutY="17.0" promptText="Search by ID or Name" />
            </children>
        </Pane>
        <Button fx:id="mainFormExitButton" layoutX="833.0" layoutY="361.0" mnemonicParsing="false" text="Exit" />
    </children>
