            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <Pane fx:id="partsPane" layoutX="37.0" layoutY="64.0" prefHeight="273.0" prefWidth="403.0">
            <children>
                <TableView fx:id="partsTableView" layoutX="-1.0" layoutY="45.0" prefHeight="172.0" prefWidth="403.0">
